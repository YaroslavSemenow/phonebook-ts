{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "outDir": "build",
    "rootDir": "src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "sourceMap": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "baseUrl": "src"
  },
  "exclude": ["node_modules", "build"],
  "types": ["typePatches"],
  "include": ["src"]
}
